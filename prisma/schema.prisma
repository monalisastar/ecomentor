generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//
// ‚úÖ Enums
//
enum QuestionType {
  MCQ
  OPEN_ENDED
  FILE_UPLOAD
  NUMERIC
}

enum CertificateStatus {
  PENDING
  VERIFIED
  REVOKED
}

enum PrerequisiteType {
  COURSE_COMPLETION
  AREA_RESTRICTION
  CERTIFICATION
  NONE
}

enum ClimateCourseCategory {
  GENERAL

  CLIMATE_FOUNDATIONS
  CLIMATE_SCIENCE
  GHG_ACCOUNTING
  CARBON_PROJECT_DEVELOPMENT
  MRV_SYSTEMS
  OFFSET_VERIFICATION
  CARBON_POLICY
  CARBON_MARKETS
  ESG_REPORTING
  CLIMATE_FINANCE
  GREEN_INVESTMENT
  SUSTAINABLE_AGRICULTURE
  ENERGY_EFFICIENCY
}

enum GHGScope {
  SCOPE1
  SCOPE2
  SCOPE3
  CROSS_SCOPE
}

enum CertificateType {
  COMPLETION
  ACHIEVEMENT
  PROFESSIONAL
}

enum CourseTier {
  FOUNDATIONAL
  PROFESSIONAL
  ADVANCED_PRACTITIONER
}

//
// ‚úÖ Authentication & User Models
//
model User {
  id               String    @id @default(cuid()) @map("_id")
  name             String?
  email            String    @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  resetToken       String?
  resetTokenExpiry DateTime?
  roles            String[]  @default(["student"])
  bio              String?
  specialization   String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  enrollments       Enrollment[]
  certificates      Certificate[]
  payments          Payment[]
  progressRecords   ProgressRecord[]
  createdCourses    Course[]           @relation("InstructorCourses")
  reviews           Review[]
  announcements     Announcement[]
  certificateDesign CertificateDesign?
  status            String             @default("INVITED") // ACTIVE | INVITED | SUSPENDED
    // üÜï Back-relation for quiz attempts
  quizAttempts      QuizAttempt[]
}
// 

//
// ‚úÖ Certificate Design (Staff Custom Layouts)
//
model CertificateDesign {
  id            String   @id @default(cuid()) @map("_id")
  createdBy     String   @unique
  logoUrl       String?
  signatureUrl  String?
  backgroundUrl String?
  color         String?  @default("#1B5E20")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [createdBy], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//
// ‚úÖ Core LMS for Climate & Carbon Education
//
model Course {
  id          String  @id @default(cuid()) @map("_id")
  title       String
  slug        String  @unique
  description String?
  image       String?

  category    String?
  scope       GHGScope?
  methodology String?
  standard    String?
  subSector   String?
  tier        CourseTier?
  track       String?
  priceUSD    Float?
  published   Boolean     @default(false)
  language    String?
  level       String?
  duration    String?
  tags        String[]    @default([])
  sdgTargets  String[]    @default([])

  objectives      String?
  whyTake         String?
  requirements    String?
  instructorNotes String?

  prerequisiteType          PrerequisiteType @default(NONE)
  prerequisiteArea          String?
  prerequisiteCertificateId String?

  instructorId  String?
  instructor    User?                @relation("InstructorCourses", fields: [instructorId], references: [id])
  modules       Module[]
  enrollments   Enrollment[]
  payments      Payment[]
  reviews       Review[]
  announcements Announcement[]
  quizzes       Quiz[]
  prerequisites CoursePrerequisite[] @relation("CourseToPrerequisites")
  dependentOn   CoursePrerequisite[] @relation("CourseToDependents")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  adminStatus String   @default("APPROVED")
  adminNote   String?

  // ‚öôÔ∏è Keep only truly useful indexes
  @@index([category])
  @@index([instructorId])
  @@index([category, instructorId])
  @@index([published])
}



//
// ‚úÖ Many-to-Many Prerequisites
//
model CoursePrerequisite {
  id                   String @id @default(cuid()) @map("_id")
  courseId             String
  prerequisiteCourseId String

  course             Course @relation("CourseToPrerequisites", fields: [courseId], references: [id], onDelete: Cascade)
  prerequisiteCourse Course @relation("CourseToDependents", fields: [prerequisiteCourseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([courseId, prerequisiteCourseId])
  @@index([prerequisiteCourseId])
}

//
// ‚úÖ Course Content Hierarchy
model Module {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  slug        String   @unique
  objectives  String?
  order       Int?
  description String?
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ‚öôÔ∏è Keep only needed indexes
  @@index([courseId, order])   // compound for ordering within a course
}


model Lesson {
  id            String       @id @default(cuid()) @map("_id")
  title         String
  slug          String       @unique
  description   String?
  order         Int?
  duration      String?
  contentType   String?
  textContent   String?

  // üìÑ Document (PDF, Word, etc.)
  fileUrl       String?
  fileType      String?
  fileName      String?      // original file name
  fileSize      String?      // e.g. "2.3 MB"
  fileUploaded  String?      // human-readable timestamp

  // üé• Video upload
  videoUrl      String?
  videoName     String?
  videoSize     String?
  videoUploaded String?

  // üë§ Audit metadata
  updatedBy     String?      // name or email of last editor

  // üîó Relations
  moduleId      String
  module        Module       @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  quizzes       LessonQuiz[]
  quizAttempts  QuizAttempt[]

  // üïì System fields
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // ‚öôÔ∏è Optimized Indexes
  @@index([moduleId, order])   // üî• Compound for fast module lesson ordering
  @@index([title])             // For search/filter in dashboards
}


//
// ‚úÖ Lesson-Specific Quizzes (Per-Lesson Quiz System)
//
model LessonQuiz {
  id        String   @id @default(cuid()) @map("_id")
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  question  String
  optionA   String
  optionB   String
  optionC   String
  optionD   String
  correct   String
  createdAt DateTime @default(now())

  // ‚öôÔ∏è Optimized Index
  @@index([lessonId])
}


//
// ‚úÖ Enrollment & Progress
//
model Enrollment {
  id            String   @id @default(cuid()) @map("_id")
  userId        String
  courseId      String
  progress      Int      @default(0)
  completed     Boolean  @default(false)
  enrolledAt    DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // üí≥ Payment Info
  paymentStatus String?  // e.g. "PAID", "PENDING", "FAILED"
  paymentMethod String?  // e.g. "MPESA", "CARD", "CRYPTO"
  paymentRef    String?
  amountPaid    Float?

  // üîó Relations
  user          User       @relation(fields: [userId], references: [id])
  course        Course     @relation(fields: [courseId], references: [id])
  payment       Payment[]
  certificates  Certificate[]   // üëà Added back-relation to Certificate

  // ‚öôÔ∏è Indexes & Constraints
  @@unique([userId, courseId])        // One enrollment per course per user
  @@index([userId])                   // Fast student lookup
  @@index([courseId])                 // Fast course lookup
  @@index([courseId, userId])         // Instructor dashboards
  @@index([completed])                // Quick filtering for completion stats
  @@index([paymentStatus])            // Fast payment reconciliation
}


//
// ‚úÖ Certificates
model Certificate {
  id              String            @id @default(cuid()) @map("_id")
  studentId       String
  studentName     String
  courseSlug      String
  courseTitle     String
  certificateUrl  String?
  qrCodeUrl       String?
  previewUrl      String?  
  verificationUrl String
  verificationId  String            @unique
  issueDate       DateTime          @default(now())
  score           Float?
  type            CertificateType   @default(COMPLETION)
  issuedBy        String?           @default("Eco-Mentor Climate LMS")
  verifiedBy      String?
  language        String?           @default("en")
  durationHours   Float?
  status          CertificateStatus @default(PENDING)
  metadataURI     String?           // Supabase-hosted metadata JSON URL

  // üß© Relations
  user          User?        @relation(fields: [studentId], references: [id])
  enrollmentId  String?      // üëà now properly placed
  enrollment    Enrollment?  @relation(fields: [enrollmentId], references: [id])

  // ü™ô Blockchain tracking
  blockchainTx       String? // transaction hash
  blockchainContract String? // contract address
  blockchainNetwork  String? // e.g. "polygon-amoy"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ‚úÖ Indexes and constraints
  @@index([studentId])
  @@index([courseSlug])
  @@unique([studentId, courseSlug]) // one certificate per course per student
}

//
// ‚úÖ Payments
//
model Payment {
  id           String  @id @default(cuid()) @map("_id")
  userId       String
  courseId     String
  enrollmentId String?

  amount    Float
  currency  String    @default("KES")
  method    String
  reference String?
  status    String    @default("PENDING")
  gateway   String?
  paidAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  txHash     String?
  walletFrom String?
  walletTo   String?

  user       User        @relation(fields: [userId], references: [id])
  course     Course      @relation(fields: [courseId], references: [id])
  enrollment Enrollment? @relation(fields: [enrollmentId], references: [id])

  @@index([userId])
  @@index([courseId])
  @@index([status])
}

//
//  Lesson Progress Tracking
//
model ProgressRecord {
  id          String   @id @default(cuid()) @map("_id")
  userId      String
  courseId    String
  lessonId    String
  completedAt DateTime @default(now())

  // üß† Progress metadata
  score       Float?    // e.g. 80%
  isPassed    Boolean?  @default(false)

  // üîó Relations
  user   User   @relation(fields: [userId], references: [id])
  // optional future relation:
  // lesson Lesson @relation(fields: [lessonId], references: [id])

  // ‚öôÔ∏è Optimized Indexes
  @@unique([userId, lessonId])       // Prevents duplicate records per lesson per user
  @@index([courseId])                // Quick filtering by course
  @@index([userId])                  // Fast user-based progress lookup
  @@index([courseId, userId])        // üî• Compound for course progress dashboards
  @@index([isPassed])                // Quick filtering for pass/fail analytics
}


//
// Course Reviews
//
model Review {
  id        String   @id @default(cuid()) @map("_id")
  courseId  String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  course Course @relation(fields: [courseId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([courseId, userId])
  @@index([rating])
}

//
// ‚úÖ Announcements
//
model Announcement {
  id        String   @id @default(cuid()) @map("_id")
  courseId  String
  authorId  String
  title     String
  message   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())

  course Course @relation(fields: [courseId], references: [id])
  author User   @relation(fields: [authorId], references: [id])

  @@index([courseId])
  @@index([authorId])
}

//
// ‚úÖ Quiz Scaffold (optional/future)
//
model Quiz {
  id          String   @id @default(cuid()) @map("_id")
  courseId    String
  title       String
  description String?
  createdAt   DateTime @default(now())

  course    Course     @relation(fields: [courseId], references: [id])
  questions Question[]
}

model Question {
  id      String       @id @default(cuid()) @map("_id")
  quizId  String
  text    String
  type    QuestionType
  options String[]
  answer  String?
  points  Int?         @default(1)

  quiz Quiz @relation(fields: [quizId], references: [id])
}
model QuizAttempt {
  id         String   @id @default(cuid()) @map("_id")
  userId     String
  lessonId   String
  courseId   String
  score      Float?
  isPassed   Boolean  @default(false)
  attemptNo  Int      @default(1)
  createdAt  DateTime @default(now())

  // Optional cooldown management (for staff audit)
  lockedUntil DateTime?

  // üîó Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([lessonId])
  @@index([courseId])
}
model StaffTask {
  id          String    @id @default(cuid()) @map("_id")
  title       String
  description String?
  courseSlug  String?
  dueDate     DateTime?
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  assignedTo  String? // üëà FK
}

//
// ‚úÖ Unified Admin Settings
//
model AdminSettings {
  id String @id @default(cuid()) @map("_id")

  // üåê General & Branding
  platformName      String?
  supportEmail      String?
  primaryBrandColor String? @default("#1B5E20")
  defaultLanguage   String? @default("English")

  // ü™∂ Certificate Defaults
  issuerName         String? @default("Eco-Mentor Climate LMS")
  verifiedByDefault  String? @default("Eco-Mentor Verification Team")
  certificateLogoUrl String?
  signatureImageUrl  String?
  backgroundImageUrl String?
  accentColor        String? @default("#1B5E20")

  // ‚öôÔ∏è System Controls
  maintenanceMode       Boolean @default(false)
  enrollmentLock        Boolean @default(false)
  weeklyReportsToAdmins Boolean @default(false)
  enableDebugLogging    Boolean @default(false)

  // üßæ Certificates & Communication
  autoVerifyCertificates Boolean @default(false)
  emailNotifications     Boolean @default(true)

  // ü™ô Blockchain Automation
  blockchainMintingEnabled  Boolean @default(false)
  blockchainNetworkDefault  String? // e.g. "polygon-amoy"
  blockchainContractDefault String? // default smart contract address

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  slug       String   @unique
  content    String?
  sections   Json?
  coverImage String?
  type       String   @default("PAGE")
  status     String   @default("PUBLISHED")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  showInMenu Boolean  @default(false)
  menuLabel  String?

  // ‚úÖ relation to PageSection
  sectionsList PageSection[]
}

model PageSection {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  pageId String @db.ObjectId
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  sectionKey String
  content    String?
  imageUrl   String?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@unique([pageId, sectionKey])
}

model BlogPost {
  id        String   @id @default(cuid()) @map("_id")
  title     String
  slug      String   @unique
  content   String
  author    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
}
